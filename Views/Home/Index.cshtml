<div class="imagem" style="height: 450px;">
    <img class="img1" src="~/img/img1.jpg" class="img-fluid" alt="img1.jpg">
</div>
<div class="mensagem">
    <h2>Entre em contato</h2>
    <h4>Nos mande uma mensagem e fique por dentro de nossos eventos</h4>
    <form name="cadastro" action="/Home/Cadastrar" method="POST" onsubmit="Validar();">
        <div class="mb-3">
            <label asp-for="Nome" id="Nome" for="exampleFormControlInput1" class="form-label">Nome</label>
            <input asp-for="Nome" type="text" class="form-control" id="exampleFormControlInput1" required>
        </div>
        <div class="mb-3">
            <label asp-for="Email" id="Email" for="exampleFormControlInput1" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" id="exampleFormControlInput1"
                placeholder="name@example.com" required>
        </div>
        <div class="form-group">
            <label asp-for="Mensagem" for="message">Mensagem</label>
            <textarea asp-for="Mensagem" class="form-control" id="message" rows="5"></textarea>
        </div>
        <input type="submit" value="Enviar">
    </form>
</div>
<div class="cards">
    <div class="row row-cols-1 row-cols-md-3 g-4 card1">
        <div class="col">
            <a href="#popup-2" onclick="togglePopup2()">
                <div class="card" style="width: 10rem; height: 15em;">
                    <img src="~/img/Agenda.jpg" class="card-img-top" alt="Agenda.jpg">
                    <div class="card-body">
                        <h5 class="card-title">Agenda de Eventos</h5>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4 card1">
        <div class="col">
            <a href="#popup-1" onclick="togglePopup1()">
                <div class="card" style="width: 10rem; height: 15em;">
                    <img src="~/img/Dicas.jpg" class="card-img-top" alt="Dicas.jpg">
                    <div class="card-body">
                        <h5 class="card-title">Dicas de Vida Saudável</h5>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4 card1">
